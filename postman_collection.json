{
	"info": {
		"_postman_id": "bun-template-api",
		"name": "Bun Template API (tRPC)",
		"description": "Collection for testing the Bun Template tRPC API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3008",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Health Check - /health",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						}
					},
					"response": []
				},
				{
					"name": "Health Check - /isAlive",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/isAlive",
							"host": ["{{baseUrl}}"],
							"path": ["isAlive"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Template",
			"item": [
				{
					"name": "Create Template (Mutation)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/trpc/template.createOne",
							"host": ["{{baseUrl}}"],
							"path": ["trpc", "template.createOne"]
						},
						"description": "Create a new template document"
					},
					"response": []
				},
				{
					"name": "Get All Templates (Query)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/trpc/template.getByQuery?input={\"step\":0,\"limit\":10}",
							"host": ["{{baseUrl}}"],
							"path": ["trpc", "template.getByQuery"],
							"query": [
								{
									"key": "input",
									"value": "{\"step\":0,\"limit\":10}"
								}
							]
						},
						"description": "Get templates with pagination. step=0 is first page."
					},
					"response": []
				},
				{
					"name": "Get Templates by Name (Query)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/trpc/template.getByQuery?input={\"step\":0,\"limit\":10,\"name\":\"Test User\"}",
							"host": ["{{baseUrl}}"],
							"path": ["trpc", "template.getByQuery"],
							"query": [
								{
									"key": "input",
									"value": "{\"step\":0,\"limit\":10,\"name\":\"Test User\"}"
								}
							]
						},
						"description": "Filter templates by name"
					},
					"response": []
				},
				{
					"name": "Get Templates by Email (Query)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/trpc/template.getByQuery?input={\"step\":0,\"limit\":10,\"email\":\"test@example.com\"}",
							"host": ["{{baseUrl}}"],
							"path": ["trpc", "template.getByQuery"],
							"query": [
								{
									"key": "input",
									"value": "{\"step\":0,\"limit\":10,\"email\":\"test@example.com\"}"
								}
							]
						},
						"description": "Filter templates by email"
					},
					"response": []
				},
				{
					"name": "Get Template by ID (Query)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/trpc/template.getById?input={\"id\":\"507f1f77bcf86cd799439011\"}",
							"host": ["{{baseUrl}}"],
							"path": ["trpc", "template.getById"],
							"query": [
								{
									"key": "input",
									"value": "{\"id\":\"507f1f77bcf86cd799439011\"}"
								}
							]
						},
						"description": "Get a specific template by MongoDB ObjectId. Replace the id with a real one."
					},
					"response": []
				},
				{
					"name": "Get Templates Count (Query)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/trpc/template.getCount?input={}",
							"host": ["{{baseUrl}}"],
							"path": ["trpc", "template.getCount"],
							"query": [
								{
									"key": "input",
									"value": "{}"
								}
							]
						},
						"description": "Get total count of templates"
					},
					"response": []
				},
				{
					"name": "Get Templates Count filtered (Query)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/trpc/template.getCount?input={\"name\":\"Test User\"}",
							"host": ["{{baseUrl}}"],
							"path": ["trpc", "template.getCount"],
							"query": [
								{
									"key": "input",
									"value": "{\"name\":\"Test User\"}"
								}
							]
						},
						"description": "Get count of templates matching filter"
					},
					"response": []
				},
				{
					"name": "Update Template (Mutation)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"id\": \"507f1f77bcf86cd799439011\",\n    \"data\": {\n        \"name\": \"Updated Name\",\n        \"email\": \"updated@example.com\"\n    }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/trpc/template.updateOne",
							"host": ["{{baseUrl}}"],
							"path": ["trpc", "template.updateOne"]
						},
						"description": "Update a template by ID. Replace the id with a real one."
					},
					"response": []
				},
				{
					"name": "Update Template partial (Mutation)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"id\": \"507f1f77bcf86cd799439011\",\n    \"data\": {\n        \"name\": \"Only Update Name\"\n    }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/trpc/template.updateOne",
							"host": ["{{baseUrl}}"],
							"path": ["trpc", "template.updateOne"]
						},
						"description": "Partial update - only update specific fields"
					},
					"response": []
				},
				{
					"name": "Delete Template (Mutation)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"id\": \"507f1f77bcf86cd799439011\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/trpc/template.deleteOne",
							"host": ["{{baseUrl}}"],
							"path": ["trpc", "template.deleteOne"]
						},
						"description": "Delete a template by ID. Replace the id with a real one."
					},
					"response": []
				}
			]
		}
	]
}
